use util::tok::Tok;
use lalrpop_util::ParseError;

grammar<'input>();

extern {
    type Location = usize;
    type Error = char;

    enum Tok<'input> {
        "-" => Tok::Minus,
        "+" => Tok::Plus
    }
}

pub Items: Vec<(usize, usize)> = {
    => vec![],
    Items "+" =>? Err(ParseError::User { error: '+' }),
    <v:Items> "-" =>? Ok(v),
};

Spanned<T>: (usize, usize) = {
    <@L> T <@R> => (<>)
};
