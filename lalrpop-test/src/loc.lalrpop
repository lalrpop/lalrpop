use util::tok::Tok;

grammar<'input>;

extern {
    type Location = usize;

    enum Tok<'input> {
        "-" => Tok::Minus,
        "+" => Tok::Plus
    }
}

pub Items: Vec<(usize, usize)> = {
    <@L> <@R> => vec![(<>)],

    <mut v:Items> <e:Spanned<"+">> => { v.push(e); v },

    <v:Items> "-" => v
};

Spanned<T>: (usize, usize) = {
    <@L> T <@R> => /* spanned */ (<>)
};
